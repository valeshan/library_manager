  form(method='POST' action = '/edit_book')
    p
      label(for='title') Title
      input(type='text' name='title' placeholder=bookDetail.title)
    p
      label(for='author') Author
      input(type='text' name='author' placeholder=bookDetail.author)
    p
      label(for='genre') Genre
      input(type='text' name='genre' placeholder=bookDetail.genre)
